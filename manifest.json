{
    "manifest_version": 2,
    "name": "My Cool Extension",
    "version": "0.1",
    "chrome_url_overrides" : {
        "newtab" : "newPage.html"
    },
    "browser_action" : {
        "default_icon" : "icon.png",
        "default_popup": "newPage.html"
    },
    "permissions" : [
        "tabs", 
        "downloads",
        "<all_urls>",
        "http://*/",
        "https://*/"
    ],
    "background" : {
        "scripts" : ["background.js"],
        "persistent" : false 
    }
  }


